@model EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<form asp-action="EditRole" class="mt-3">


    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" disabled value=@Model.Id />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" value=@Model.RoleName />
        </div>
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a class="btn btn-primary" asp-action="ListRoles" asp-controller="Administration">Cancel</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Users In This Role</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                @foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">None at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="EditRole" class="btn btn-primary" style="width:auto">Add Users</a>
            <a asp-controller="Administration" asp-action="DeleteRole" class="btn btn-primary" style="width:auto">Remove Users</a>
        </div>
    </div>

</form>

